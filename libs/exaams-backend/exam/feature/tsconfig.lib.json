{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "feature/src/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "feature/src/**/*.spec.ts",
    "feature/src/**/*.test.ts"
  ]
}
